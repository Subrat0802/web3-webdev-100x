{
  "compilerOptions": {
    "outDir": "dist",          // Output compiled files to 'dist'
    "rootDir": "src",          // Input files are in 'src'
    "module": "ESNext",        // Ensure ES modules are used
    "moduleResolution": "Node", // Resolve modules like Node.js
    "target": "ESNext",        // Use modern JavaScript features
    "esModuleInterop": true,   // Allow compatibility between CommonJS and ESM
    "skipLibCheck": true       // Skip type checking for libraries
  },
  "include": ["src/**/*"]       // Include all files in the 'src' folder
}
